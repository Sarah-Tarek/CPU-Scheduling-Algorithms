# top‑level EditorConfig file
root = true

###############################################################################
#  Default settings (all files)                                              #
###############################################################################
[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
indent_style             = space
indent_size              = 4
tab_width                = 4

###############################################################################
#  C / C++ source & header files                                             #
###############################################################################
[*.{c,cpp,cxx,cc,h,hpp,hxx,ino}]
# keep the defaults (4‑space indent) — explicit for clarity

###############################################################################
#  CMake                                                                     #
###############################################################################
[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

###############################################################################
#  Qt Designer .ui XML files                                                 #
###############################################################################
[*.ui]
indent_size = 2

###############################################################################
#  Markdown, plaintext docs                                                  #
###############################################################################
[*.{md,txt,adoc}]
trim_trailing_whitespace = false   # keep intentional spaces
